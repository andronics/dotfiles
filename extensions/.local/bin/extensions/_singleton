#!/usr/bin/env sh

# ------------------------------

source "$(which _log)"

# ------------------------------

_singleton() {
    
    _pid_count=$(pgrep -fc "${name}" | grep -v "$$")
    
    [[ ${_pid_count} -gt 2 ]] && {
    
        _log_info "terminating"
	    killall -9 "${name}"
        exit 0
    
    }
    
    return 0

}

